@model Alesik.Haidov.Airforce.Web.Models.Airbase

@{
    Layout = "_Layout";
}


<h2>Delete Airbase</h2>

<h3>Are you sure you want to delete this airbase?</h3>
<div>
    <h4>Airbase</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            GUID
        </dt>
        <dd class="col-sm-10">
            @Model.GUID
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="GUID" />
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a href="@Url.Action("Index")">Back to List</a>
    </form>
</div>
