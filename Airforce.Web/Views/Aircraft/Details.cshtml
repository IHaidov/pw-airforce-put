@model Alesik.Haidov.Airforce.Web.Models.Aircraft

@{
    Layout = "_Layout";
}


<h2>Aircraft Details</h2>

<div>
    <h4>Aircraft</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            GUID
        </dt>
        <dd class="col-sm-10">
            @Model.GUID
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Service Hours
        </dt>
        <dd class="col-sm-10">
            @Model.ServiceHours
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>
        <dt class="col-sm-2">
            Airbase
        </dt>
        <dd class="col-sm-10">
            @Model.Airbase.Name [@Model.Airbase.Location]
        </dd>
    </dl>
</div>
<a href="@Url.Action("Index")">Back to List</a>
