@model Alesik.Haidov.Airforce.Web.Models.Aircraft

@{
    Layout = "_Layout";
}

<h2>Delete Aircraft</h2>

<h3>Are you sure you want to delete this aircraft?</h3>
<div>
    <h4>Aircraft</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            GUID
        </dt>
        <dd class="col-sm-10">
            @Model.GUID
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Service Hours
        </dt>
        <dd class="col-sm-10">
            @Model.ServiceHours
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="GUID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@Url.Action("Index")">Back to List</a>
    </form>
</div>
