@model Alesik.Haidov.Airforce.Web.Models.Aircraft

@{
    Layout = "_Layout";
}

<h2>Edit Aircraft</h2>

<form asp-action="Edit" method="post">
    <!-- Specify POST method -->
    <input type="hidden" asp-for="GUID" />
    <div class="form-group">
        <label asp-for="Model" class="control-label">Model</label>
        <input asp-for="Model" class="form-control" value="@Model.Model" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceHours" class="control-label">Service Hours</label>
        <input asp-for="ServiceHours" class="form-control" value="@Model.ServiceHours" />
        <span asp-validation-for="ServiceHours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Type</label>
        <select asp-for="Type" asp-items="ViewBag.Types" class="form-control"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AirbaseId" class="control-label">Airbase</label>
        <span asp-validation-for="AirbaseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a href="@Url.Action("Index")">Back to List</a>
</div>
