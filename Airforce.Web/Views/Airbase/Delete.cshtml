@model Alesik.Haidov.Airforce.Web.Models.Airbase

@{
    Layout = "_Layout";
}

<h2>Delete Airbase Confirmation</h2>

<div>
    <h4>Are you sure you want to delete the following airbase?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Airbase", new { id = Model.GUID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GUID" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
    }
</div>
