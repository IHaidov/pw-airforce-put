@model IEnumerable<Alesik.Haidov.Airforce.Web.Models.Aircraft>

@{
    Layout = "_Layout";
}

<h2 class="mb-3">Aircraft List</h2>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>GUID</th>
            <th>Model</th>
            <th>Service Hours</th>
            <th>Type</th>
            <th>Airbase</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aircraft in Model)
        {
            <tr>
                <td>@aircraft.GUID</td>
                <td>@aircraft.Model</td>
                <td>@aircraft.ServiceHours</td>
                <td>@aircraft.Type</td>
                <td>@aircraft.Airbase?.Name</td>
                <td>
                    <a href="@Url.Action("Details", "Aircraft", new { id = aircraft.GUID })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "Aircraft", new { id = aircraft.GUID })" class="btn btn-primary btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Aircraft", new { id = aircraft.GUID })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Aircraft")" class="btn btn-success">Create New</a>
