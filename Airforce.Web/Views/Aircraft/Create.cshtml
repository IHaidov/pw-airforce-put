@model Alesik.Haidov.Airforce.Web.Models.Aircraft
@{
    Layout = "_Layout";
}

<h2>Create Aircraft</h2>

<form asp-action="Create" method="post" class="mt-4">
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="Model" class="control-label">Model</label>
        <input asp-for="Model" class="form-control" placeholder="Enter model" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="ServiceHours" class="control-label">Service Hours</label>
        <input asp-for="ServiceHours" class="form-control" placeholder="Enter service hours" />
        <span asp-validation-for="ServiceHours" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="Type" class="control-label">Type</label>
        <select asp-for="Type" asp-items="@(new SelectList(ViewBag.Types, "Value", "Text"))" class="form-control">
            <option value="">Please select a type</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="AirbaseId" class="control-label">Airbase</label>
        <select asp-for="AirbaseId" asp-items="ViewBag.Airbases" class="form-control">
            <option value="">Please select an airbase</option>
        </select>
        <span asp-validation-for="AirbaseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
