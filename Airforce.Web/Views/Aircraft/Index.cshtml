@model IEnumerable<Alesik.Haidov.Airforce.Web.Models.Aircraft>

@{
    Layout = "_Layout";
}

<h2>Aircraft List</h2>

<table>
    <thead>
        <tr>
            <th>GUID</th>
            <th>Model</th>
            <th>Service Hours</th>
            <th>Type</th>
            <th>Airbase</th> 
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aircraft in Model)
        {
            <tr>
                <td>@aircraft.GUID</td>
                <td>@aircraft.Model</td>
                <td>@aircraft.ServiceHours</td>
                <td>@aircraft.Type</td>
                <td>@aircraft.Airbase.Name</td> 
                <td>
                    <a href="@Url.Action("Details", "Aircraft", new { id = aircraft.GUID })">Details</a> |
                    <a href="@Url.Action("Edit", "Aircraft", new { id = aircraft.GUID })">Edit</a> |
                    <a href="@Url.Action("Delete", "Aircraft", new { id = aircraft.GUID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Aircraft")">Create New</a>
